<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#66777777" />
                    <solid
                     android:color="#65716F6F" />
                    <size
                        android:width="30dp"
                        android:height="30dp" />
                </shape>
            </item>

            <item
                android:width="8dp"
                android:height="3dp"
                android:top="18dp"
                android:left="6dp">
                <rotate
                    android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="#ACACAC"/>
                    </shape>
                </rotate>
            </item>

            <item
                android:width="17dp"
                android:height="3dp"
                android:top="14dp"
                android:left="9dp">
                <rotate
                    android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="#ACACAC"/>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>

</selector>